  justify-content: center;
  align-items: center;
  font-size: 7px;
  font-weight: 600;
  color: #4285F4;
}

/* ルートカード */
.route-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 7px;
  border: 1px solid #E8E5E0;
  overflow: hidden;
}

.route-label {
  width: 100%;

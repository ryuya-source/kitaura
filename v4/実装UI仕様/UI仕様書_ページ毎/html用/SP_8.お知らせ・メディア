}

/* アコーディオンカード */
.accordion-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 7px;
  border: 1px solid #E8E5E0;
  overflow: hidden;
}

.accordion-header {
  width: 100%;
  background: #FFFFFF;
  border: none;
  border-bottom: 1px solid #E8E5E0;
  padding: 9px 7px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 5px;
  cursor: pointer;
  transition: background 0.2s ease;
}

.accordion-header:hover {
  background: #F9F9F9;
}

.accordion-title {
  flex: 1;
  display: flex;
  gap: 5px;
  align-items: center;
}

.calendar-icon {
  flex-shrink: 0;
}

.accordion-date {
  color: #3D6B4F;
  font-size: 7px;
  font-weight: 600;
}

.accordion-heading {
  color: #1C1C1C;
  font-size: 9px;
  font-weight: 600;
}

.chevron-icon {
  flex-shrink: 0;
  transition: transform 0.2s ease;
}

.accordion-card.is-open .chevron-icon {
  transform: rotate(180deg);
}

.accordion-content {
  display: none;
  padding: 9px 7px;
  display: flex;
  flex-direction: column;
  gap: 7px;
}

.accordion-card.is-open .accordion-content {
  display: flex;
}

.content-title {
  margin: 0;
  color: #1C1C1C;
  font-size: 9px;
  font-weight: 600;
}

.content-desc {
  margin: 0;
  color: #4A4A4A;
  font-size: 9px;
  font-weight: 400;
  line-height: 1.6;
}

.content-list {
  margin: 0;
  padding: 0;
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.content-item {
  color: #4A4A4A;
  font-size: 9px;
  font-weight: 400;
  line-height: 1.6;
}

.content-note {
  margin: 0;
  color: #9B9B9B;
  font-size: 7px;
  font-weight: 400;
  line-height: 1.5;
}

/* レスポンシブ対応 */
@media (min-width: 768px) {
  .sp8-news {
    max-width: 375px;
    margin: 0 auto;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
  }
}
```

